def main():
    print("üåç Welcome to the Tour Africa App!")
    print("Discover the capital city and fun facts about any African country.")
    print("Type 'exit' at any time to quit.\n")

    while True:
        country_input = input("Enter the name of an African country: ").strip().lower()

        if country_input == 'exit':
            print("üëã Thank you for using Tour Africa. Safe travels!")
            break

        if country_input in country_capitals:
            capital = country_capitals[country_input]
            print(f"\n‚úÖ The capital of {country_input.title()} is {capital}.")
            print(f"‚è≥ Loading fun facts about {country_input.title()}...\n")
            about_country = call_gpt(f"Tell me fun facts about {country_input.title()} and advice on some tourist attractions.")
            print(about_country)
            print("\n" + "-"*50 + "\n")
        else:
            print("‚ö†Ô∏è That doesn't seem to be a valid African country. Please try again.\n")

if __name__ == '__main__':
    main()
